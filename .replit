modules = ["web", "nodejs-20", "ruby-3.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Jekyll Server"

[[workflows.workflow]]
name = "Jekyll Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bundle exec jekyll serve --host 0.0.0.0 --port 5000 --livereload --force_polling"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35729
externalPort = 3000

[[ports]]
localPort = 39447
externalPort = 3002

[[ports]]
localPort = 43891
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bundle", "exec", "jekyll", "serve", "--host", "0.0.0.0", "--port", "5000"]
